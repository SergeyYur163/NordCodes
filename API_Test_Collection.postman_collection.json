								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has result OK\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.result).to.eql(\"OK\");",
									"});",
									"",
									"pm.test(\"Response contains token\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.token).to.exist;",
									"    pm.expect(jsonData.token).to.be.a('string');",
									"    pm.expect(jsonData.token.length).to.be.above(0);",
									"    pm.collectionVariables.set(\"token\", jsonData.token);",
									"});",
									"",
									"pm.test(\"Response contains balance\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.balance).to.exist;",
									"    pm.expect(jsonData.balance).to.eql(10000);",
									"    pm.collectionVariables.set(\"initial_balance\", jsonData.balance);",
